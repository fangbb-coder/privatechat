# Private Chat v3.3 Configuration
APP_NAME=Private Chat
APP_VERSION=v3.3
ENVIRONMENT=development
DEBUG=false

# Security Configuration
# JWT Secret Key (MUST CHANGE IN PRODUCTION)
SECRET_KEY=your-secret-key-change-this-in-production-minimal-chat-2025

# JWT Expiration Time (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Remember Me Token Expiration (minutes, 7 days = 10080)
REMEMBER_TOKEN_EXPIRE_MINUTES=10080

# Encryption Configuration
# Default encryption key for message encryption
DEFAULT_ENCRYPTION_KEY=PrivateChat2025Secure!

# RSA Key Configuration
RSA_KEY_SIZE=2048
RSA_KEYS_DIR=./keys

# Login Security Configuration
# Maximum login attempts before lock
MAX_LOGIN_ATTEMPTS=5

# Lock time after failed login (minutes)
LOGIN_LOCK_MINUTES=15

# IP Rate Limit (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# Password Strength Configuration
# Minimum password length
MIN_PASSWORD_LENGTH=8

# Maximum password length
MAX_PASSWORD_LENGTH=64

# Require uppercase letters (true/false)
PASSWORD_REQUIRE_UPPERCASE=true

# Require lowercase letters (true/false)
PASSWORD_REQUIRE_LOWERCASE=true

# Require digits (true/false)
PASSWORD_REQUIRE_DIGITS=true

# Require special characters (true/false)
PASSWORD_REQUIRE_SPECIAL=true

# Log Configuration
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=./logs/app.log

# Log file max size (MB)
LOG_FILE_MAX_SIZE=10

# Log file backup count
LOG_FILE_BACKUP_COUNT=5

# WebSocket Configuration
# WebSocket connection timeout (seconds)
WS_TIMEOUT=30

# Heartbeat interval (seconds)
HEARTBEAT_INTERVAL=30

# Message Configuration
# Message recall time limit (minutes, 2 minutes = 2)
MESSAGE_RECALL_MINUTES=2

# Maximum message length
MAX_MESSAGE_LENGTH=5000

# Admin Configuration
# Admin usernames (comma separated)
ADMIN_USERNAMES=admin

# Server Configuration
# Server address
HOST=0.0.0.0

# Server port
PORT=8080
