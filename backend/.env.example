# ==================== 应用配置 ====================
APP_NAME=Private Chat
APP_VERSION=v3.3
ENVIRONMENT=development
DEBUG=false

# ==================== 安全配置 ====================
# JWT 密钥（生产环境必须修改为随机字符串）
SECRET_KEY=your-secret-key-change-this-in-production-minimal-chat-2025

# JWT 过期时间（分钟）
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 记住我 Token 过期时间（分钟，7天=10080）
REMEMBER_TOKEN_EXPIRE_MINUTES=10080

# ==================== 加密配置 ====================
# 默认加密密码（用于消息加密）
DEFAULT_ENCRYPTION_KEY=PrivateChat2025Secure!

# RSA 密钥配置
RSA_KEY_SIZE=2048
RSA_KEYS_DIR=./keys

# ==================== 登录安全配置 ====================
# 登录失败最大尝试次数
MAX_LOGIN_ATTEMPTS=5

# 登录失败锁定时间（分钟）
LOGIN_LOCK_MINUTES=15

# IP 频率限制（每分钟请求数）
RATE_LIMIT_PER_MINUTE=60

# ==================== 密码强度配置 ====================
# 最小密码长度
MIN_PASSWORD_LENGTH=8

# 最大密码长度
MAX_PASSWORD_LENGTH=64

# 要求包含大写字母（true/false）
PASSWORD_REQUIRE_UPPERCASE=true

# 要求包含小写字母（true/false）
PASSWORD_REQUIRE_LOWERCASE=true

# 要求包含数字（true/false）
PASSWORD_REQUIRE_DIGITS=true

# 要求包含特殊字符（true/false）
PASSWORD_REQUIRE_SPECIAL=true

# ==================== 日志配置 ====================
# 日志级别: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# 日志文件路径
LOG_FILE=./logs/app.log

# 日志文件最大大小（MB）
LOG_FILE_MAX_SIZE=10

# 日志文件备份数量
LOG_FILE_BACKUP_COUNT=5

# ==================== WebSocket 配置 ====================
# WebSocket 连接超时（秒）
WS_TIMEOUT=30

# 心跳间隔（秒）
HEARTBEAT_INTERVAL=30

# ==================== 消息配置 ====================
# 消息撤回时间限制（分钟，2分钟=2）
MESSAGE_RECALL_MINUTES=2

# 最大消息长度
MAX_MESSAGE_LENGTH=5000

# ==================== 管理员配置 ====================
# 管理员用户名（逗号分隔）
ADMIN_USERNAMES=admin

# ==================== 服务器配置 ====================
# 服务器地址
HOST=0.0.0.0

# 服务器端口
PORT=8080
